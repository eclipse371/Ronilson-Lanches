
  <h1>Editar Lanche</h1>
<a href="/logout" class="logout-button">Sair</a>

  <form>

     
  <% if (lanche.foto) { %>
    <div>
      <p>Foto atual:</p>
      <img src="/uploads/<%= lanche.foto %>" alt="Foto do lanche" width="150" />
    </div>
  <% } %>

      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome" value="<%= lanche.nome %>" required />
      

      <label for="descricao">Descrição:</label>
      <textarea id="descricao" name="descricao" required><%= lanche.descricao %></textarea>

      <label for="preco">Preço:</label>
      <input type="number" step="0.01" id="preco" name="preco" value="<%= lanche.preco %>" required />

      <button id="btn-editar" data-id="<%= lanche.id %>" type="button">Salvar Alterações</button>
  </form>

  <a href="/lista">Voltar para lista</a>
